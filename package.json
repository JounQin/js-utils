{
  "name": "js-utils",
  "version": "1.0.0",
  "description": "personal set of js-utils",
  "repository": "git@github.com:JounQin/js-utils.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "yarn build -w",
    "doc": "jsdoc src -d docs",
    "lint": "eslint . --max-warnings 10",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "codecov": "codecov"
  },
  "babel": {
    "presets": ["env"]
  },
  "eslintConfig": {
    "extends": ["1stg"]
  },
  "eslintIgnore": ["coverage", "dist", "docs"],
  "jest": {
    "collectCoverage": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "printWidth": 150
        }
      }
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "eslint-config-1stg": "^3.1.0",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.2",
    "prettier": "^1.18.2",
    "rollup": "^1.17.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-watch": "^4.3.1"
  }
}
